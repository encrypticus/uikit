extends  ../components/layout/layout.pug
include includes

block keywords
  meta(name="keywords", content="")

block description
  meta(name="description" content="")

append style
  include ../blocks/favicons/favicons

block title
  title Home

block content
  body.page
    .wrapper
      include ../blocks/header/header
      main.page__content.page__content_reviews
        section.left-col
          section.page__reviews
            +review({
              name: "Dimitri Pasmore",
              review: "SUPER! GENIALLY SIMPLE!"
            })

            +review({
              name: "Vladimir Petrov",
              review: "just the best of all. 5 stars",
              avatar: "../blocks/review/img/user2.jpg"
            })

            +review({
              name: "Oiga2206",
              review: "Excellent extension, I advise))",
              avatar: "../blocks/review/img/user3.jpg"
            })

            +review({
              name: "Valentine Prisyazhnyuk",
              review: "5 stars. Put, you will not regret.",
              avatar: "../blocks/review/img/user4.jpg"
            })

          form.page__form.page__form_feedback(action='/')
              .page__title
                +title("Leave your feedback:")

              .page__textfield
                +text-field({
                  placeholder: "Your Name",
                  name: "firstname"
                })
                +form-tooltip

              .page__textfield
                +text-field({
                  type: "email",
                  name: "email",
                  placeholder: "Your email"
                })
                +form-tooltip

              .page__textarea
                +textarea({
                  placeholder: "Your feedback",
                  name: "feedback"
                })

              h4 How many stars would you put:

              +slider({
                theme: "blue",
                ticks: [0, 1, 2, 3, 4, 5],
                step: 1,
                selection: "before"
              })

              .page__form-button
                +button({text: "Submit", theme: "blue"})

        include ../blocks/sidebar/sidebar

      include ../blocks/footer/footer

      include ../blocks/overlay/overlay

        .page__popup-messaging
          +messaging({
            theme: "blue",
            username: "Encrypticus",
            avatar: "../img/admin.jpg",
            question: "Hey! So are we cool to meet at the art gallery? Say 8pm",
            answer: "Yeah that sounds great. See you then.",
            fluid: true
          })
      script(src="reviews.js")