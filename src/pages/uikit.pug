extends  ../blocks/layout/layout.pug
include includes

block keywords
  meta(name="keywords", content="")

block description
  meta(name="description" content="")

block title
  title UiKit

block content
  main.content
    section
      +title("Standard buttons")
      .elements-block
        +button({size: "sm", theme: "blue"})(class="elements-block__button")

        +button({theme: "blue"})(class="elements-block__button")

        +button({
          size: "lg", noOutline: true,
          animate: true, theme: "blue"
        })(class="elements-block__button")

        +button({theme: "blue"})(class="elements-block__button")

        +button({size: "sm", theme: "blue"})(class="elements-block__button")

      .elements-block
        +button({size: "sm", theme: "cinnabar"})(class="elements-block__button")

        +button({theme: "cinnabar"})(class="elements-block__button")

        +button({
          size: "lg", theme: "cinnabar",
          noOutline: true, animate: true
        })(class="elements-block__button")

        +button({theme: "cinnabar"})(class="elements-block__button")

        +button({size: "sm", theme: "cinnabar"})(class="elements-block__button")

    section
      +title("Arrow buttons")
      .elements-block
        +button-wrapper("15.85714285714286%")
          +arrow-button({
            noOutline: true,
            size: "45%",
            theme: "blue",
            animate: true,
            ripple: true
          })

          +arrow-button({
            size: "45%",
            noOutline: true,
            direction: "right",
            theme: "blue",
            animate: true,
            ripple: true
          })

        +button-wrapper("18.71428571428571%")
          +arrow-button({
            noOutline: true,
            size: "45%",
            theme: "cinnabar",
            disable: true
          })

          +arrow-button({
            noOutline: true, direction: "right",
            size: "45%",
            theme: "cinnabar",
            disable: true
          })

        +button-wrapper("24.42857142857143%")
          +arrow-button({
            noOutline: true,
            size: "45%",
            theme: "blue",
            animate: true,
            ripple: true
          })

          +arrow-button({
            noOutline: true, direction: "right",
            size: "45%",
            theme: "blue",
            animate: true,
            ripple: true
          })

        +button-wrapper("18.71428571428571%")
          +arrow-button({
            noOutline: true,
            size: "45%",
            theme: "cinnabar"
          })

          +arrow-button({
            noOutline: true, direction: "right",
            size: "45%",
            theme: "cinnabar"
          })

        +button-wrapper("15.85714285714286%")
          +arrow-button({
            noOutline: true,
            size: "45%",
            theme: "blue",
            direction: "up",
            ripple: true
          })

          +arrow-button({
            size: "45%",
            noOutline: true,
            direction: "down",
            theme: "blue",
            ripple: true
          })


    section
      +title("Percentage/pie chart")
      .elements-block
        +percentage-chart({theme: "cinnabar", size: "14.28571428571429%"})
        +percentage-chart({percent: 38, theme: "cinnabar", size: "14.28571428571429%"})
        +percentage-chart({percent: 62, theme: "blue", size: "12%"})
        +percentage-chart({percent: 89, theme: "cinnabar", size: "20%"})

      .elements-block
        +pie-chart({
            size: "14.28571428571429%", greySlice: 11,
            redSlice: 26, blueSlice: 30
        })

        +pie-chart({
            size: "18%", greySlice: 33,
            redSlice: 48, blueSlice: 15
        })

        +pie-chart({
            size:"10%", greySlice: 15,
            redSlice: 10, blueSlice: 55
        })

        +pie-chart({
            size: "14.28571428571429%",greySlice: 25,
            redSlice: 25, blueSlice: 50
        })

    section
      +title("Sliders")
      .elements-block
        +slider({
          theme: "cinnabar",
          tooltip: "always"
        })(class="elements-block__slider")

        +slider({
          theme: "blue",
          ticks:[0, 25, 50, 75, 100],
          step: 25,
          selection: "before"
        })(class="elements-block__slider")

    section
      +title("Stages")
      +stages({
        stages: 5,
        completed: 3,
        theme: "cinnabar",
      })(style="margin-bottom: 80px;", class="elements-block__stages")

      +stages({
        stages: 7,
        completed: 5,
        theme: "blue",
        width: "70%",
        fontSize: ".75rem"
      })(class="elements-block__stages")

    section.form-elements
      +title("Form elements")
      .form-elements__inner
        .form-elements__left-col
          div
            +text-field({
              placeholder: "Your Name",
              width: "59.42857142857143100%"
            })(class="form-elements__text-field")

            +form-tooltip({
              type: "error",
              width: "20.57142857142857%"
            })(class="form-elements__tooltip")

          div
            +text-field({
              placeholder: "Your Email",
              width: "59.42857142857143100%"
            })(class="form-elements__text-field")
            +form-tooltip({width: "20.57142857142857%"})(class="form-elements__tooltip")

          div
            +textarea({width: "82.28571428571429%"})

          div
            +button({
              text: "Submit",
              form: true
            })

          +title("Search / Drop down")(style="margin-top: 68px")
          +search-field({placeholder: "Search", width: "82.28571428571429%"})
          +search-field({placeholder: "Search", width: "82.28571428571429%",
            error: true})(style="margin-top: 10px")

          +drop-down({
            width: "82.28571428571429%",
            options: ["option1", "option2", "option3", "option4", "option5", "option6"],
            noOutline: true
          })(class="form-elements__drop-down")

        .form-elements__right-col
          +title("Toggles")
          +toggle({id: "toggle1"})
          +toggle({check: true, id: "toggle2"})

          +title("Tick boxes")(style="margin-top: 30px")
          +tick-box({id: "tick1", check: true})
          +tick-box({id: "tick2"})

          +title("User profile")(style="margin-top: 87px")
          +user-profile({job: "ux designer"})(style="margin-bottom: 10px")
          +user-profile({
            name: "Sarah Brown",
            job: "developer",
            avatar: "../blocks/user-profile/img/avatar2.png",
            themeBlue: true
          })

    section(style="width: 100%")
      +title("News & events")
      +news({width: "41.14285714285714%"})
      +news({
        width: "41.14285714285714%",
        theme: "blue",
        src: "../blocks/news/img/events.png",
        type: "events",
        title: "This is the title",
        text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
      })
      +news({width: "41.14285714285714%", theme: "cinnabar"})
      +news({
        width: "41.14285714285714%",
        theme: "cinnabar",
        src: "../blocks/news/img/events.png",
        type: "events",
        title: "This is the title",
        text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
      })

      section
        +title("Location")
        .location-wrapper
          +location({
            address: "1259  CALIFORNIA ST San Francisco, CA"
          })

  script(src="https://api-maps.yandex.ru/2.1/?apikey=2ac75161-4165-4271-8540-e821eb701ba3&lang=en_US", type="text/javascript")
  script(src="scripts.js")
