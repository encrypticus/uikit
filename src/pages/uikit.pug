extends  ../blocks/layout/layout.pug
include includes

block keywords
  meta(name="keywords", content="")

block description
  meta(name="description" content="")

block title
  title UiKit

block content
  main.content
    section
      +title("Standard buttons")
      .buttons-block
        +button({size: "sm", theme: "green"})(class="buttons-block__button")
        +button({theme: "green"})(class="buttons-block__button")

        +button({
          size: "lg", theme: "green",
          noOutline: true
        })(class="buttons-block__button")

        +button({theme: "green"})(class="buttons-block__button")
        +button({size: "sm", theme: "green"})(class="buttons-block__button")

      .buttons-block
        +button({size: "sm", theme: "red"})(class="buttons-block__button")
        +button({theme: "red"})(class="buttons-block__button")

        +button({
          size: "lg", theme: "red",
          noOutline: true
        })(class="buttons-block__button")

        +button({theme: "red"})(class="buttons-block__button")
        +button({size: "sm", theme: "red"})(class="buttons-block__button")



  script(src="scripts.js")
