extends  ../blocks/layout/layout.pug
include includes

block keywords
  meta(name="keywords", content="")

block description
  meta(name="description" content="")

block title
  title UiKit

block content
  main.content
    section
      +title("Standard buttons")
      .elements-block
        +button({size: "sm", theme: "blue"})(class="elements-block__button")
        +button({theme: "blue"})(class="elements-block__button")

        +button({
          size: "lg", theme: "blue",
          noOutline: true, animate: true
        })(class="elements-block__button")

        +button({theme: "blue"})(class="elements-block__button")
        +button({size: "sm", theme: "blue"})(class="elements-block__button")

      .elements-block
        +button({size: "sm", theme: "cinnabar"})(class="elements-block__button")
        +button({theme: "cinnabar"})(class="elements-block__button")

        +button({
          size: "lg", theme: "cinnabar",
          noOutline: true, animate: true
        })(class="elements-block__button")

        +button({theme: "cinnabar"})(class="elements-block__button")
        +button({size: "sm", theme: "cinnabar"})(class="elements-block__button")

    section
      +title("Arrow buttons")
      .elements-block
        +button-wrapper("15.85714285714286%")
          +arrow-button({
            noOutline: true,
            size: "45%",
            theme: "blue",
            animate: true,
            ripple: true
          })
          +arrow-button({
            size: "45%",
            noOutline: true,
            direction: "right",
            theme: "blue",
            animate: true,
            ripple: true
          })
        +button-wrapper("18.71428571428571%")
          +arrow-button({
            noOutline: true,
            size: "45%",
            theme: "cinnabar",
            disable: true
          })
          +arrow-button({
            noOutline: true, direction: "right",
            size: "45%",
            theme: "cinnabar",
            disable: true
          })
        +button-wrapper("24.42857142857143%")
          +arrow-button({
            noOutline: true,
            size: "45%",
            theme: "blue",
            animate: true,
            ripple: true
          })
          +arrow-button({
            noOutline: true, direction: "right",
            size: "45%",
            theme: "blue",
            animate: true,
            ripple: true
          })

        +button-wrapper("18.71428571428571%")
          +arrow-button({
            noOutline: true,
            size: "45%",
            theme: "cinnabar"
          })
          +arrow-button({
            noOutline: true, direction: "right",
            size: "45%",
            theme: "cinnabar"
          })

        +button-wrapper("15.85714285714286%")
          +arrow-button({
            noOutline: true,
            size: "45%",
            theme: "blue",
            direction: "up",
            ripple: true
          })
          +arrow-button({
            size: "45%",
            noOutline: true,
            direction: "down",
            theme: "blue",
            ripple: true
          })


    section
      +title("Percentage/pie chart")
      .elements-block
        +percentage-chart({theme: "cinnabar", size: "14.28571428571429%"})
        +percentage-chart({percent: 38, theme: "cinnabar", size: "14.28571428571429%"})
        +percentage-chart({percent: 62, theme: "blue", size: "14.28571428571429%"})
        +percentage-chart({percent: 89, theme: "cinnabar", size: "14.28571428571429%"})
        //+percentage-chart({percent: 25, theme: "blue", size: "14.28571428571429%"})
        //+percentage-chart({percent: 100, theme: "cinnabar", size: "14.28571428571429%"})
        //+percentage-chart({percent: 10, theme: "blue", size: "14.28571428571429%"})
        //+percentage-chart({percent: 105, theme: "blue", size: "14.28571428571429%"})
        //+percentage-chart({percent: 888, theme: "blue", size: "14.28571428571429%"})
        //+percentage-chart({percent: 95, theme: "cinnabar", size: "10%"})
  script(src="scripts.js")
