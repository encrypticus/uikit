extends  ../blocks/layout/layout.pug
include includes

block keywords
  meta(name="keywords", content="")

block description
  meta(name="description" content="")

block title
  title UiKit

block content
  main.content
    section
      +title("Standard buttons")
      .buttons-block
        +button({size: "sm", theme: "blue"})(class="buttons-block__button")
        +button({theme: "blue"})(class="buttons-block__button")

        +button({
          size: "lg", theme: "blue",
          noOutline: true, animate: true
        })(class="buttons-block__button")

        +button({theme: "blue"})(class="buttons-block__button")
        +button({size: "sm", theme: "blue"})(class="buttons-block__button")

      .buttons-block
        +button({size: "sm", theme: "cinnabar"})(class="buttons-block__button")
        +button({theme: "cinnabar"})(class="buttons-block__button")

        +button({
          size: "lg", theme: "cinnabar",
          noOutline: true, animate: true
        })(class="buttons-block__button")

        +button({theme: "cinnabar"})(class="buttons-block__button")
        +button({size: "sm", theme: "cinnabar"})(class="buttons-block__button")

    section
      +title("Arrow buttons")
      .buttons-block
        +button-wrapper("15.85714285714286%")
          +arrow-button({
            noOutline: true,
            size: "45%",
            theme: "blue",
            animate: true,
            ripple: true
          })
          +arrow-button({
            size: "45%",
            noOutline: true,
            direction: "right",
            theme: "blue",
            animate: true,
            ripple: true
          })
        +button-wrapper("18.71428571428571%")
          +arrow-button({
            noOutline: true,
            size: "45%",
            theme: "cinnabar",
            disable: true
          })
          +arrow-button({
            noOutline: true, direction: "right",
            size: "45%",
            theme: "cinnabar",
            disable: true
          })
        +button-wrapper("24.42857142857143%")
          +arrow-button({
            noOutline: true,
            size: "45%",
            theme: "blue",
            animate: true,
            ripple: true
          })
          +arrow-button({
            noOutline: true, direction: "right",
            size: "45%",
            theme: "blue",
            animate: true,
            ripple: true
          })

        +button-wrapper("18.71428571428571%")
          +arrow-button({
            noOutline: true,
            size: "45%",
            theme: "cinnabar"
          })
          +arrow-button({
            noOutline: true, direction: "right",
            size: "45%",
            theme: "cinnabar"
          })

        +button-wrapper("15.85714285714286%")
          +arrow-button({
            noOutline: true,
            size: "45%",
            theme: "blue",
            direction: "up",
            ripple: true
          })
          +arrow-button({
            size: "45%",
            noOutline: true,
            direction: "down",
            theme: "blue",
            ripple: true
          })


  script(src="scripts.js")
