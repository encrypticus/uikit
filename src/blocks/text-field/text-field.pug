//- Создает текстовое поле

mixin text-field(options)

  //- Принимает:
  //-   options.placeholder    {string} - текст-заполнитель внутри текстого поля
  //-   options.width          {string} - ширина текстового поля с единицами измерения
  //- Вызов:
        +text-field({placeholder: "Yout email", width: "20%"})

  //- Объект настроек текстового поля по умолчанию
  -
    var settings = {
      placeholder: ""
    },
    options = options || settings,
    placeholder = options.placeholder || settings.placeholder,
    width = options.width;

  input.text-field(
    style=width != undefined ? `width: ${width}` : "",
    type="text",
    placeholder=`${placeholder}`
  )&attributes(attributes)
