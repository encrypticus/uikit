//- Создает компонент calendar

mixin calendar(theme = "")

  //- Принимает:
  //- theme    {string} - класс модификатор темы календаря
  //- Вызов:
        +calendar("blue")
  -
    //- Список модификаторов
    var modifiers = "";

    if (theme === "blue")
      modifiers += " datepicker-here_theme_blue";

  .datepicker-here(class=modifiers)&attributes(attributes)
    .datepicker-header
