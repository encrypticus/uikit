//- Создает компонент user-profile

mixin user-profile(options)

  //- Принимает:
  //-   options.avatar    {string} - путь до файла с фото пользователя
  //-   name              {string} - имя пользователя
  //-   job               {string} - профессия пользователя
  //- Вызов:
        +user-profile({
          name: "Vasya Pupkin",
          job: "developer",
          avatar: "../blocks/user-profile/img/avatar2.png",
          themeBlue: true
        })

  -
    // Объект настроек по умолчанию
    var settings = {
      avatar: "../blocks/user-profile/img/avatar1.png",
      name: "John Smith",
      job: "developer"
    },

    options = options || settings,
    avatar = options.avatar || settings.avatar,
    name = options.name || settings.name,
    job = options.job || settings.job,

    //- Список модификаторов
    modifiers = "";

    if (options.themeBlue === true)
      modifiers += "user-profile_themeBlue";

  .user-profile(class=modifiers)&attributes(attributes)
    .user-profile__avatar-wrapper
      img.user-profile__avatar(src=avatar, alt="avatar")
    .user-profile__info-wrapper
      svg.user-profile__triangle(width="0.375rem", height="0.8125rem", xmlns="http://www.w3.org/2000/svg",viewBox="0 0 6 13")
        polygon(points="0,6.5 6,0 6,13")
      .user-profile__info
        h2.user-profile__name= name
        h3.user-profile__job= job
        .user-profile__socials
          svg.icon-edge(width="0.625rem", height="1.3125rem")
            use(xlink:href="#icon-fb")
          svg.icon-center(width="1.5625rem", height="1.25rem")
            use(xlink:href="#icon-tw")
          svg.icon-edge(width="1.3125rem", height="1.3125rem")
            use(xlink:href="#icon-dr")

