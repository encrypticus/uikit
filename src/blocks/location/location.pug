//- Создает компонент карты

mixin location(options)

  //- Принимает:
  //-  options.slogan     {string} - текстовое содержимое блока location__slogan
  //-  options.address    {string} - текстовое содержимое блока location__address
  //-  options.theme      {string} - клас-модификатор цветовой темы карты

  //- Вызов:
        +location({
          slogan: "He there!",
          address: "1259  CALIFORNIA ST San Francisco, CA"
        })

  -
    //- Объект настроек по умолчанию
    var settings = {
      slogan: "Meet us!",
      address: "",
      theme: ""
    },

    //- Список модификаторов
    modifiers = "",

    options = options || settings,
    slogan = options.slogan || settings.slogan,
    address = options.address || settings.address,
    theme = options.theme || settings.theme;

    if (theme === "blue")
      modifiers += " location_theme_blue";

  .location(class=modifiers, id="map")&attributes(attributes)
    .location__panel
      p.location__slogan= slogan
      p.location__address= address
